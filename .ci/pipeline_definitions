remedy-controller:
  jobs:
    force-release:
      traits:
        version:
          preprocess: 'finalize'
          inject_effective_version: True
        component_descriptor: ~
        publish:
          dockerimages:
            remedy-controller-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/gardener/remedy-controller/remedy-controller-azure'
              dockerfile: 'Dockerfile'
              target: remedy-controller-azure
              tag_as_latest: True
        release:
          nextversion: 'bump_minor'
          release_notes_policy: disabled
          rebase_before_release: true
          release_commit_publishing_policy: 'push_to_branch'
          commit_message_prefix: '[ci skip]'

    head-update:
      steps:
        verify:
          image: 'golang:1.14.4'
      traits:
        version:
          inject_effective_version: True
        publish:
          dockerimages:
            remedy-controller-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/gardener/remedy-controller/remedy-controller-azure'
              dockerfile: 'Dockerfile'
              target: remedy-controller-azure
    pull-request:
      steps:
        verify:
          image: 'golang:1.14.4'
      traits:
        pull-request: ~

    release:
      repo:
        trigger: false
      steps:
        test:
          image: 'eu.gcr.io/gardener-project/cc/job-image-golang:0.12.0'
          execute:
            - integration_test.sh
          depends:
            - publish
        trigger_release:
          execute:
            - trigger_release.py
          vars:
            RELEASE_JOB_NAME: 'pipeline.variant("force-release").job_name()'
          depends:
            - test
      traits:
        version:
          inject_effective_version: True
        component_descriptor: ~
        publish:
          dockerimages:
            remedy-controller-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/gardener/remedy-controller/remedy-controller-azure'
              dockerfile: 'Dockerfile'
              target: remedy-controller-azure
